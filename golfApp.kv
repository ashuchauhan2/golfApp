<mainScreen@GridLayout>:
    Label:
        font_size: "75dp"
        font_name: "fonts/main.ttf"
        text: "Driving Range Practise"
        color: 12/255, 180/255, 76/255, 1

    BoxLayout:
        cols: 2
        RoundedButton:
            font_size: "35dp"
            font_name: "fonts/main.ttf"
            text: "Start"
            size_hint: 1, .3
            on_press: root.manager.current = 'start'

        RoundedButton:
            font_size: "35dp"
            font_name: "fonts/main.ttf"
            text: "Instructions"
            size_hint: 1, .3
            on_press: root.manager.current = 'instructions'

<instructionsScreen>:
    BoxLayout:
        TextInput:
            font_size: "25dp"
            color: 12/255, 180/255, 76/255, 1
            text: "Determine the golf shot and a yardage you deem fit for the picture displayed. Picture said golf shot on your driving range then execute the shot and make notes on what worked and what didn't. Lastly, practice your weaknesses, and play to your strengths on the course."
            readonly: True

    RoundedButton:
        font_size: "35dp"
        font_name: "fonts/main.ttf"
        text: "Main Menu"
        size_hint: 1, .3
        on_press: root.manager.current = 'main'


<startScreen>:
    GridLayout:
        rows: 2
        Image:
            source: "images/augusta1.jpeg"
            pos_hint: {"center_x": .5, "center_y": .8}
            allow_stretch: True
        RoundedButton:
            text: "Next"
            size_hint: .4, .3
            on_press: root.manager.current = 'course'

