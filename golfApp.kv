<mainScreen@GridLayout>:
    rows: 2
    Label:
        font_size: "75dp"
        font_name: "fonts/main.ttf"
        text: "Driving Range Practise"
        color: 12/255, 180/255, 76/255, 1

    RoundedButton:
        font_size: "35dp"
        font_name: "fonts/main.ttf"
        text: "Start"
        size_hint: 1, .3
        on_press: root.manager.current = 'start'

<startScreen>:
    GridLayout:
        rows: 2
        Image:
            source: "images/augusta1.jpeg"
            pos_hint: {"center_x": .5, "center_y": .8}
            allow_stretch: True
        RoundedButton:
            text: "Next"
            size_hint: .4, .3
            on_press: root.manager.current = 'augusta2'

<augusta2@GridLayout>


<RoundedButton@Button>
    background_color: 0,0,0,0
    background_normal: ""
    canvas.before:
        Color:
            rgba: 12/255, 180/255, 76/255, 1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [58]
