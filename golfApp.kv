<RoundedButton@Button>
    background_color: 0,0,0,0
    background_normal: ""
    canvas.before:
        Color:
            rgba: 12/255, 180/255, 76/255, 1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [58]
